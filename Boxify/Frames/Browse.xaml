<Page
    x:Class="Boxify.Browse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Boxify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="806"
    d:DesignHeight="315">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="20,0,20,0" >

        <RelativePanel>

            <TextBlock Name="featuredPlaylistLabel"
                       Text="Featured Playlists"
                       Margin="0,0,0,0"
                       Style="{StaticResource SubheaderTextBlockStyle}"/>

            <Button Name="refresh" 
                    RelativePanel.RightOf="featuredPlaylistLabel"
                    RelativePanel.AlignVerticalCenterWith="featuredPlaylistLabel"
                    Margin="20,5,0,-6"
                    Height="40"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="24" 
                    Content="&#xE72C;"
                    Background="{x:Null}"
                    Click="refresh_Click"
                    XYFocusRight="{x:Bind More}"/>

            <Button Name="More"
                    RelativePanel.RightOf="refresh"
                    RelativePanel.AlignVerticalCenterWith="featuredPlaylistLabel"
                    Margin="20,5,0,-6"
                    Content="Load More"
                    Style="{StaticResource ButtonStyle}"
                    Click="More_Click"/>

            <TextBlock Name="featuredPlaylistMessage"
                       Text="What others are listending to now..."
                       RelativePanel.Below="featuredPlaylistLabel"
                       Margin="0,0,0,20"
                       Style="{StaticResource TitleTextBlockStyle}"/>

            <GridView Name="FeaturedPlaylists"
                      RelativePanel.Below="featuredPlaylistMessage"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"
                      IsItemClickEnabled="True"
                      ItemClick="FeaturedPlaylists_ItemClick"
                      XYFocusUp="{x:Bind refresh}">

                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid Orientation="Horizontal" HorizontalChildrenAlignment="Left" VerticalChildrenAlignment="Stretch">
                        </WrapGrid>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>

                <GridView.ItemContainerStyle>

                    <Style TargetType="GridViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                </GridView.ItemContainerStyle>

            </GridView>

        </RelativePanel>

    </Grid>
</Page>
