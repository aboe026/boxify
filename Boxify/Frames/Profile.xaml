<Page
    x:Class="Boxify.Profile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Boxify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="806"
    d:DesignHeight="315">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <WebView x:Name="webView"
                 Margin="50,50,50,50"
                 NavigationStarting="WebView_NavigationStarting"/>

        <RelativePanel>
            <Ellipse Name="userPicContainer"
                     RelativePanel.Above="status"
                     RelativePanel.AlignHorizontalCenterWithPanel="True"
                     Canvas.ZIndex="1"
                     Height="120"
                     Width="120"
                     Margin="0,0,0,20"
                     Stroke="{ThemeResource AppButtonBorder}"
                     StrokeThickness="2">

                <Ellipse.Fill>
                    <ImageBrush x:Name="userPic"
                                Stretch="Uniform"/>
                </Ellipse.Fill>
            </Ellipse>

            <TextBlock Name="blankUser"
                       RelativePanel.Above="status"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                       RelativePanel.AlignVerticalCenterWith="userPicContainer"
                       Margin="0,0,0,20"
                       FontFamily="Segoe MDl2 Assets" 
                       FontSize="60"
                       Text="&#xE77B;"/>

            <TextBlock x:Name="status"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Width="Auto"
                       Text="You are currently not logged in. Select the button to fix that."
                       Style="{StaticResource TitleTextBlockStyle}"/>

            <Button x:Name="login"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    RelativePanel.Below="status"
                    Margin="0,10,0,0"
                    Content="Log In"
                    Click="login_Click"
                    Style="{StaticResource ButtonStyle}"/>
        </RelativePanel>

    </Grid>
</Page>
