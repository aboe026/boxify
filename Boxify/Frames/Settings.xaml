<Page
    x:Class="Boxify.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Boxify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="806"
    d:DesignHeight="315">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <ScrollViewer>

        <Grid Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Name="tvSaveLabel"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Text="TV Safe Area"
                   Style="{StaticResource TitleTextBlockStyle}"/>

            <ToggleSwitch Name="tvSafe"
                      Grid.Row="1"
                      Grid.Column="2"
                      VerticalAlignment="Center"
                      Style="{StaticResource ToggleButtonStyle}"
                      Toggled="tvSafe_Toggled"/>

            <TextBlock Name="tvSafeDesc"
                   Grid.Row="1"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   Margin="100,0,10,0"
                   Text="Turn on to include margins which ensure UI elements are within the TV safe boundaries. Turn off to have UI elements extend to edge of screen."
                   Style="{StaticResource BodyTextBlockStyle}"
                   TextWrapping="Wrap"/>

            <TextBlock Name="themeLabel"
                   Grid.Row="3"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Text="Theme Color"
                   Style="{StaticResource TitleTextBlockStyle}"/>

            <RelativePanel Grid.Row="3"
                       Grid.Column="2">

                <RadioButton Name="System"
                         RelativePanel.AlignLeftWithPanel="True"
                         Content="System"
                         Template="{StaticResource RadioButtonControlTemplate}"
                         Style="{StaticResource RadioButtonStyle}"
                         GroupName="ThemeColor"
                         Click="ThemeColor_Click"/>

                <RadioButton Name="Light"
                         RelativePanel.RightOf="System"
                         Content="Light"
                         Template="{StaticResource RadioButtonControlTemplate}"
                         Style="{StaticResource RadioButtonStyle}"
                         GroupName="ThemeColor"
                         Click="ThemeColor_Click"/>

                <RadioButton Name="Dark"
                         RelativePanel.RightOf="Light"
                         Content="Dark"
                         Template="{StaticResource RadioButtonControlTemplate}"
                         Style="{StaticResource RadioButtonStyle}"
                         GroupName="ThemeColor"
                         Click="ThemeColor_Click"/>

            </RelativePanel>

            <TextBlock Name="playbackLabel"
                   Grid.Row="5"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Text="Playback Source"
                   Style="{StaticResource TitleTextBlockStyle}"/>

            <RelativePanel Grid.Row="5"
                       Grid.Column="2">

                <RadioButton Name="Spotify"
                         RelativePanel.AlignLeftWithPanel="True"
                         Content=""
                         Template="{StaticResource RadioButtonControlTemplate}"
                         Style="{StaticResource RadioButtonStyle}"
                         GroupName="PlaybackSource"
                         Click="Playbacksource_Click">

                    <RadioButton.Background>
                        <ImageBrush ImageSource="{ThemeResource SpotifyLogo}"
                                    Stretch="Uniform">

                            <ImageBrush.Transform>
                                <ScaleTransform ScaleX="0.6" ScaleY="0.6" CenterX="80" CenterY="20"/>
                            </ImageBrush.Transform>

                        </ImageBrush>
                    </RadioButton.Background>

                </RadioButton>

                <TextBlock Name="SpotifyLabel"
                           RelativePanel.RightOf="Spotify"
                           RelativePanel.AlignVerticalCenterWith="Spotify"
                           Text="Only 30 second previews but songs load faster."
                           Style="{StaticResource BodyTextBlockStyle}"/>

                <RadioButton Name="YouTube"
                         RelativePanel.Below="Spotify"
                         Content=""
                         Template="{StaticResource RadioButtonControlTemplate}"
                         Style="{StaticResource RadioButtonStyle}"
                         GroupName="PlaybackSource"
                         Click="Playbacksource_Click">

                    <RadioButton.Background>
                        <ImageBrush ImageSource="{ThemeResource YouTubeLogo}"
                                    Stretch="UniformToFill">

                            <ImageBrush.Transform>
                                <ScaleTransform ScaleX="0.6" ScaleY="0.6" CenterX="80" CenterY="20"/>
                            </ImageBrush.Transform>

                        </ImageBrush>
                    </RadioButton.Background>

                </RadioButton>

                <TextBlock Name="YoutubeLabel"
                           RelativePanel.RightOf="YouTube"
                           RelativePanel.AlignVerticalCenterWith="YouTube"
                           Text="Full song playback but takes longer to load. Might not find song."
                           Style="{StaticResource BodyTextBlockStyle}"
                           TextWrapping="WrapWholeWords"/>

            </RelativePanel>

        </Grid>

    </ScrollViewer>
</Page>
