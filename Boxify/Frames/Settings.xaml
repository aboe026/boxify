<Page
    x:Class="Boxify.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Boxify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="806"
    d:DesignHeight="315">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="20"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="tvSaveLabel"
                   Grid.Row="1"
                   Grid.Column="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Text="TV Safe Area"
                   Style="{StaticResource TitleTextBlockStyle}"/>

        <ToggleSwitch Name="tvSafe"
                      Grid.Row="1"
                      Grid.Column="2"
                      VerticalAlignment="Center"
                      Style="{StaticResource ToggleButtonStyle}"
                      Toggled="tvSafe_Toggled"/>

        <TextBlock Name="tvSafeDesc"
                   Grid.Row="1"
                   Grid.Column="2"
                   VerticalAlignment="Center"
                   Margin="100,0,10,0"
                   Text="Turn on to include margins which ensure UI elements are within the TV safe boundaries. Turn off to have UI elements extend to edge of screen."
                   Style="{StaticResource SubtitleTextBlockStyle}"
                   TextWrapping="Wrap"/>

    </Grid>
</Page>
